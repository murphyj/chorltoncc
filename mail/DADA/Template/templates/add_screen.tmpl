		 function update_status_bar(){ 
			new Ajax.Updater(
				'statusbar', '<!-- tmpl_var S_PROGRAM_URL -->', 
				{ 
				    method: 'post', 
					parameters: {
						rand_string:               $F('rand_string'),
						new_email_file:            $F('new_email_file'), 
						f:                         'check_status',

						},
				onCreate: 	 function() {
				
				},
				onComplete: 	 function() {
					$('statusbar').show(); 
				}
				});
		}
        setInterval("do_check_status();",'1000');

    //]]>
</script>



